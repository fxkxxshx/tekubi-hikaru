<style>
	.wrapper {
		display: flex;
		flex-direction: column;
		height: 100%;
		min-height: 100vh;
		padding: 20px;
	}

	.heading {
		font-size: 0;
		max-width: 1000px;
		width: 100%;
	}

	.heading svg {
		fill: var(--color-text);
	}

	.main {
		flex: 1;
	}

	.list {
		margin-top: 40px;
	}

	.item + .item {
		margin-top: 20px;
	}

	.item-link {
		align-items: center;
		background-color: var(--color-text);
		border-radius: 10px;
		color: var(--color-bg);
		display: flex;
		font-size: 18px;
		height: 110px;
		justify-content: space-between;
		padding: 25px;
		position: relative;
		width: 100%;
		word-wrap: break-word;
	}

	.footer {
		margin-top: 40px;
	}

	.copyright {
		font-size: 12px;
		line-height: 1;
	}
</style>
